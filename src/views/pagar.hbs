<div class="container" >
    <h3>Realizar Pagamento</h3>  
    <br>
    <div class="container">
        <div class="table-responsive">
            <table class="table table-primary">
                <thead>
                    <tr>
                        <th scope="col">Data Pagamento</th>
                        <th scope="col">Pagador</th>
                        <th scope="col">Valor</th>
                        <th scope="col">Ação</th>
                    </tr>
                </thead>
                <tbody>
                <form method="POST" action="/pagamento/create">
                    <tr class="table table-primary">
                        <td><input type="date" class="form-control" name="dataPagamento" required></td>
                        <td>
                        <select class="form-select" name="pagador" id="" required>
                            <option selected>Selecione</option>
                            {{#each pagador}}
                            <option value={{this.id}}>{{this.nome}}</option>     
                            {{/each}}
                        </select>                            
                        </td>
                        <td><input type="number" format="currency" precision="2" name="valorPago" class="form-control" required></td>
                        <td><button type="submit" class="btn btn-primary" >Pagar</button></td>
                        
                        {{#if statusPag}}
                        <script>                           
                            swal("Pago", "Pagamento realizado.", "success"); 
                            setTimeout(function() {
                                 window.location.href = '/pagamento/pagar';
                            }, 3000); 
                                                    
                        </script>
                        {{/if}}
                    </tr>
                </form>
                </tbody>
            </table>
        </div>
        
    </div>     
</div>